<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detalleLibroFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lbllibro"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="Titulo"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/lblautor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del autor"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/lbLisbn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Isbnn del libro"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/lblgenero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="genero"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/lblejemplares"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Números de ejemplares disponibles"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/lbldescripion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/lblejEmplaresocupados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Números de ejemplares ocupados"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btneliminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="eliminar"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="editar"
            android:textSize="24sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>